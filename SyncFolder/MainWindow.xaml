<Window x:Class="SyncFolder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SyncFolder" 
        xmlns:cm="clr-namespace:System.ComponentModel;assembly=System"
        xmlns:p="clr-namespace:SyncFolder.Properties"
        mc:Ignorable="d"
        Title="Синхронизатор папок" Height="450" Width="800">
    <Window.Resources>
        <cm:BackgroundWorker x:Key="BackgroundWorker"
            WorkerReportsProgress="True" WorkerSupportsCancellation="True"
            DoWork="BackgroundWorker_DoWork"
            ProgressChanged="BackgroundWorker_ProgressChanged"
            RunWorkerCompleted="BackgroundWorker_RunWorkerCompleted">
        </cm:BackgroundWorker>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Content="Каталог источник:" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"></Label>
        <TextBox x:Name="TextBoxOriginFolder" Text="{Binding Source={x:Static p:Settings.Default}, Path=OriginFolderName, Mode=TwoWay}" Width="auto" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Margin="2"></TextBox>
        <Button x:Name="OpenOriginFolder" Click="OpenOriginFolder_Click"  Grid.Column="2" Grid.Row="0" MinWidth="50" Margin="7" Height="28">...</Button>

        <Label Content="Каталог реплика:" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1"></Label>
        <TextBox x:Name="TextBoxDestinationFolder" Text="{Binding Source={x:Static p:Settings.Default}, Path=DestinationFolderName, Mode=TwoWay}" Width="auto" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="2"></TextBox>
        <Button x:Name="OpenDestinationFolder" Click="OpenDestinationFolder_Click" Grid.Column="2" Grid.Row="1" MinWidth="50" Margin="7" Height="28">...</Button>

        <Label Content="Файл логирования:" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2"></Label>
        <TextBox x:Name="TextBoxLogFile" Text="{Binding Source={x:Static p:Settings.Default}, Path=LogFileName, Mode=TwoWay}" Width="auto" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Margin="2"></TextBox>
        <Button x:Name="OpenLogFile" Click="OpenLogFile_Click" Grid.Column="2" Grid.Row="2" MinWidth="50" Margin="7" Height="28">...</Button>

        <Label Content="Интервал (мсек):" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3"></Label>
        <TextBox x:Name="TextBoxInterval" Text="{Binding Source={x:Static p:Settings.Default}, Path=IntervalText, Mode=TwoWay}" Width="auto" VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" Margin="5"></TextBox>

        <Label Content="Изменения:" VerticalAlignment="Center" Grid.Column="0" Grid.Row="4" Margin="5,15,5,0"></Label>

        <ListBox x:Name="ListOfChanges" Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="2" Grid.RowSpan="3"  Margin="5"></ListBox>

        <Button x:Name="ButtonStart" Click="ButtonStart_Click" ToolTip="Запуск синхронизатора" Grid.Column="2" Grid.Row="5">
            <Image x:Name="ImagePlay" Source="/Icons/Start.png" Style="{StaticResource IconsStyle}"/>
        </Button>
        <Button x:Name="ButtonStop" Click="ButtonStop_Click" ToolTip="Остановка" Grid.Column="2" Grid.Row="6">
            <Image x:Name="ImageStop" Source="/Icons/Stop.png" Style="{StaticResource IconsStyle}"/>
        </Button>


        <TextBlock x:Name="TextBoxStatus" Text="Готов!" VerticalAlignment="Center" Grid.Row="9" Margin="5" Grid.ColumnSpan="2"></TextBlock>
            <ProgressBar x:Name="ProgressBarChanges" Minimum="0" Maximum="100" Height="10" Grid.Row="8" Margin="5,5,5,5" Grid.ColumnSpan="2"></ProgressBar>


        <Button x:Name="ButtonClose" Click="ButtonClose_Click" ToolTip="Выход" Grid.Column="2" Grid.Row="9">
            <Image x:Name="ImageClose" Source="/Icons/Close.png" Style="{StaticResource IconsStyle}"/>
        </Button>
    </Grid>
</Window>
